<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:context="http://www.springframework.org/schema/context">

    <!-- Annotation-based beans -->
    <context:component-scan base-package="com.yeliseev.credit.portal"/>
    <bean id="credit_proxyCreator" class="com.haulmont.cuba.portal.sys.remoting.PortalRemoteProxyBeanCreator">
        <property name="serverSelector" ref="cuba_ServerSelector"/>
        <property name="remoteServices">
            <map>
                <entry key="credit_BorrowerService" value="com.yeliseev.credit.service.BorrowerService"/>
                <entry key="credit_CreditService" value="com.yeliseev.credit.service.CreditService"/>
                <entry key="credit_CreditKindService" value="com.yeliseev.credit.service.CreditKindService"/>
            </map>
        </property>
    </bean>

</beans>